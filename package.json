{
  "name": "github-merge-guardian",
  "displayName": "GitHub Merge Guardian",
  "version": "1.3.1",
  "description": "Prevent incorrect merges on GitHub's pull request.",
  "author": "daku10",
  "scripts": {
    "dev": "pnpm generate && plasmo dev",
    "build": "pnpm generate && pnpm lint && plasmo build",
    "package": "pnpm generate && pnpm lint && plasmo package",
    "lint": "tsc --noEmit && eslint src --max-warnings=0",
    "test": "vitest run",
    "generate": "tcm -p 'src/**/*.module.css'"
  },
  "dependencies": {
    "@dnd-kit/core": "6.0.8",
    "@dnd-kit/sortable": "7.0.2",
    "@dnd-kit/utilities": "3.2.1",
    "@plasmohq/messaging": "0.3.0",
    "@plasmohq/storage": "1.6.0",
    "plasmo": "0.70.1",
    "react": "18.2.0",
    "react-colorful": "5.6.1",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.236",
    "@types/node": "18.16.14",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "autoprefixer": "10.4.14",
    "eslint": "8.40.0",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "markuplint": "3.10.0",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "tailwindcss": "3.3.2",
    "ts-pattern": "4.3.0",
    "typed-css-modules": "0.7.2",
    "typescript": "5.0.4",
    "vitest": "0.31.0"
  },
  "manifest": {
    "host_permissions": [
      "https://github.com/*/pull/*"
    ],
    "permissions": [],
    "browser_specific_settings": {
      "gecko": {
        "id": "{e6aa71a3-2d62-415a-b522-c81e80e2fe52}",
        "strict_min_version": "57.0"
      }
    }
  },
  "pnpm": {
    "patchedDependencies": {
      "react-dom@18.2.0": "patches/react-dom@18.2.0.patch"
    }
  }
}
